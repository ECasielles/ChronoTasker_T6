<resources>

    <!--Tema de color:
    https://material.io/color/#!/?view.left=0&view.right=0&primary.color=3F51B5&secondary.color=64B5F6
    -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--https://material.io/guidelines/style/typography.html-->
    <style name="Custom.Title" parent="AppTheme">
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Medium</item>
        <item name="android:textSize">@dimen/textTitle</item>
    </style>
    <style name="Custom.SignUp" parent="AppTheme">
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Small</item>
        <item name="android:textSize">@dimen/textSubTitle</item>
    </style>

</resources>
